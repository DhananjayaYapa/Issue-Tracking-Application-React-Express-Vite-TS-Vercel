            "url": {
              "raw": "{{baseUrl}}/issues/1",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "1"]
            },
            "description": "Get a single issue by its ID. Users can only see their own issues."
          },
          "response": []
        },
        {
          "name": "Create Issue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Sample Issue Title",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Detailed description of the issue",
                  "type": "text"
                },
                {
                  "key": "priority",
                  "value": "Medium",
                  "type": "text"
                },
                {
                  "key": "status",
                  "value": "Open",
                  "type": "text"
                },
                {
                  "key": "attachment",
                  "type": "file",
                  "src": "",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/issues",
              "host": ["{{baseUrl}}"],
              "path": ["issues"]
            },
            "description": "Create a new issue. Supports file attachment (multipart/form-data). User role."
          },
          "response": []
        },
        {
          "name": "Update Issue",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Updated Issue Title",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Updated description",
                  "type": "text"
                },
                {
                  "key": "priority",
                  "value": "High",
                  "type": "text"
                },
                {
                  "key": "attachment",
                  "type": "file",
                  "src": "",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/issues/1",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "1"]
            },
            "description": "Update an existing issue. Supports file attachment (multipart/form-data)."
          },
          "response": []
        },
        {
