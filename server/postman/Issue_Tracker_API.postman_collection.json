              }
            ],
            "url": {
              "raw": "{{baseUrl}}/issues/my-issues?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["issues", "my-issues"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "priority",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "fromDate",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "toDate",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "Get issues created by the authenticated user. User role only."
          },
          "response": []
