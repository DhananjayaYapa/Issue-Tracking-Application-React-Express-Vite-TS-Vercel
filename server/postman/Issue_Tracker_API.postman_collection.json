            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/issues?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["issues"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "priority",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "sortBy",
                  "value": "created_at",
                  "disabled": true
                },
                {
                  "key": "sortOrder",
                  "value": "DESC",
                  "disabled": true
                },
                {
                  "key": "fromDate",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "toDate",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "createdBy",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "Get all issues with pagination and optional filters. Admin only."
